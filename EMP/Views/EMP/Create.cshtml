@{
}

<div classs="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary"> Add Employee</h1>

                    <p class="text-center text-danger fw-bold">@TempData["message"]</p>

                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">  
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Employee Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                          </div>
                       
               
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter City" />
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>
                            
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter State" />
                           
                        </div>
                            <div class="form-group">
                            
                            <label asp-for="Salary"></label>
                            <input  type="text" asp-for="Salary" class="form-control" placeholder="Enter Salary"/>
                            <span asp-validation-for="Salary" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-sm btn-outline-success float-end mt-2 p-2" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>